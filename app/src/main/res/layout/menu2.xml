<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="30dp"
        android:progress="100"
        android:progressDrawable="@drawable/progressbar2"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="1dp"
        android:paddingBottom="2dp"
        android:minHeight="34dp"
        android:text="100%"/>
    <TextView
        android:id="@+id/myTextProgress"
        android:layout_alignLeft="@id/progressBar2"
        android:layout_alignTop="@id/progressBar2"
        android:layout_alignRight="@id/progressBar2"
        android:layout_alignBottom="@id/progressBar2"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100% Charging..."
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ff16266f" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_below="@+id/progressBar2"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:layout_margin="20dp"
        android:paddingTop="8dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Night Mode"
        android:id="@+id/switch2"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignParentStart="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="1dp"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When do you get up?"
        android:id="@+id/textView"
        android:minWidth="130dp"
        android:paddingLeft="14dp"
        android:layout_below="@+id/switch2"
        android:layout_alignEnd="@+id/toggleButton2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:paddingLeft="14dp" />

</RelativeLayout>